<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="horizontal">

  <ImageView
      android:id="@+id/image_contact_thumbnail"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:srcCompat="@drawable/ic_person_outline_black_96dp"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/text_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Filipe Guedes"/>

    <TextView
        android:id="@+id/text_contact_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(11) 974-605-298"/>

    <TextView
        android:id="@+id/text_contact_transferred_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="R$ 120,00"/>

  </LinearLayout>

</LinearLayout>
